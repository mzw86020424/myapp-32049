<head>
  <!-- Bootstrap core CSS -->
  <link href="../assets/dist/css/bootstrap.css" rel="stylesheet">
  <style>
  .bd-placeholder-img {
    font-size: 1.125rem;
    text-anchor: middle;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }
  @media (min-width: 768px) {
    .bd-placeholder-img-lg {
      font-size: 3.5rem;
    }
  }
  .card {
    position:relative;
  }
  .card img {
  object-fit: cover;
  width: 100%;
  }
  .card-text {
    width:100%;
    height:100%;
    text-align: center;
    position:absolute;
    left:0;
    top:0;
  }
  </style>
</head>
<body>

<%# 共通ヘッダー %>
<%= render "shared/header"%>

  <main role="main">
    <div class="album py-5 bg-light">
      <div class="container">
        <div class="row"> 
          <% @zines.each do |zine| %>
              <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                  <%= link_to zine_path(zine.id) do %>
                    <%=  image_tag zine.user.image, class:'card-img-top', width: '100%', height: '225'%>
                      <div class="card-text d-flex align-items-center justify-content-center text-white font-weight-bold font-italic">
                        <h1><strong><%= zine.user.nickname %>'s SCRAP<br>
                        <%= zine.year %>年<br>
                        <%= zine.month %>月号</h1></strong>
                      </div>
                  <% end %>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </body>
</main>