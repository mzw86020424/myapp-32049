<style>
  .col-md-6 {
    border: solid 1px black;
  }
  .col-md-6 img {
    object-fit: contain;
    width:100%;
    max-width: 100%;
    height: auto;
  }
</style>

<body class="container-fluid">
  <div>
    <div class="sortable row">
    <% @posts.each_with_index do |post,i| %>
      <div class="col-md-6">
      <%= link_to image_tag(thumbalizr_url(post.url, {:country => 'ja', :width =>  720})), post.url, :target => "_blank"%>
      </div>
    <% end %> 
    </div>
  </div>
</body>
