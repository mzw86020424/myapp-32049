<style>
  html,
  body {
    height: 100%;
  }
    
  body {
    display: -ms-flexbox;
    display: flex;
    -ms-flex-align: center;
    align-items: center;
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #f5f5f5;
  }

  .form-signin {
    width: 100%;
    max-width: 330px;
    padding: 15px;
    margin: auto;
  }
  .form-signin .checkbox {
    font-weight: 400;
  }
  .form-signin .form-control {
    position: relative;
    box-sizing: border-box;
    height: auto;
    padding: 10px;
    font-size: 16px;
  }
  .form-signin .form-control:focus {
    z-index: 2;
  }
  .form-signin input[type="email"] {
    margin-bottom: -1px;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
  }
  .form-signin input[type="password"] {
    margin-bottom: 10px;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }
</style>

<form class="form-signin text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <img class="mb-4" src="public/images/logo.png" alt="image" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    
    <%= f.label :email, class:'sr-only' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control', placeholder:'Email address' %>
    
    <%= f.label :password, class:'sr-only' %>
    <%= f.password_field :password, autocomplete: "current-password", class:'form-control', placeholder:'Password' %>
    
    <%= f.submit "Log in", class: 'btn btn-lg btn-primary btn-block'%>
  <h3 class="h5 mb-3 font-weight-normal">
    <%= render "devise/shared/links" %>
  </h3>
  <% end %>
</form>